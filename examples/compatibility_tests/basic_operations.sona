// Basic operations test for Sona v0.5.0
import utils.math.smod as math

// Simple print statements
print("Testing basic Sona v0.5.0 functionality")

// Variable declarations
let x = 5
let y = 10

// Math operations
print("x = " + math.to_str(x))
print("y = " + math.to_str(y))
print("x + y = " + math.to_str(math.add(x, y)))
print("x - y = " + math.to_str(math.subtract(x, y)))
print("x * y = " + math.to_str(math.multiply(x, y)))
print("y / x = " + math.to_str(math.divide(y, x)))

// Constants
print("PI value: " + math.to_str(math.PI))

// String operations
print("String concatenation: " + "Hello" + ", " + "World!")

// Variable reassignment
let x = 20
print("New x value: " + math.to_str(x))
