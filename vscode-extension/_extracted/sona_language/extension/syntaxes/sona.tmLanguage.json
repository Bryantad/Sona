{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Sona",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#cognitive-keywords"
        },
        {
            "include": "#ai-keywords"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#functions"
        },
        {
            "include": "#variables"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "begin": "#",
                    "end": "$",
                    "name": "comment.line.number-sign.sona"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "begin": "\"",
                    "end": "\"",
                    "name": "string.quoted.double.sona",
                    "patterns": [
                        {
                            "match": "\\\\.",
                            "name": "constant.character.escape.sona"
                        }
                    ]
                },
                {
                    "begin": "'",
                    "end": "'",
                    "name": "string.quoted.single.sona",
                    "patterns": [
                        {
                            "match": "\\\\.",
                            "name": "constant.character.escape.sona"
                        }
                    ]
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "match": "\\b\\d+(\\.\\d+)?\\b",
                    "name": "constant.numeric.sona"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "match": "\\b(if|else|elif|while|for|func|return|class|import|from|as|try|except|finally|with|def|true|false|null|and|or|not|in|is|break|continue|pass|when)\\b",
                    "name": "keyword.control.sona"
                }
            ]
        },
        "cognitive-keywords": {
            "patterns": [
                {
                    "match": "\\b(think|remember|focus|analyze|working_memory|focus_mode|cognitive_load|break_down|simplify|intend|explain)\\b",
                    "name": "keyword.cognitive.sona"
                }
            ]
        },
        "ai-keywords": {
            "patterns": [
                {
                    "match": "\\b(ai_complete|ai_explain|ai_debug|ai_optimize|ai_review)\\b",
                    "name": "keyword.ai.sona"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "match": "(\\+|\\-|\\*|\\/|\\%|\\=\\=|\\!\\=|\\<|\\>|\\<\\=|\\>\\=|\\=|\\+\\=|\\-\\=|\\*\\=|\\/\\=)",
                    "name": "keyword.operator.sona"
                }
            ]
        },
        "functions": {
            "patterns": [
                {
                    "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()",
                    "name": "entity.name.function.sona"
                }
            ]
        },
        "variables": {
            "patterns": [
                {
                    "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b",
                    "name": "variable.other.sona"
                }
            ]
        }
    },
    "scopeName": "source.sona"
}