{
    "name": "sona-ai-native-programming",
    "displayName": "Sona: AI-Native Programming with Cognitive Accessibility",
    "description": "AI-native programming for real work and real mindsâ€”Focus Mode, Working Memory, and Explain/Optimize commands backed by a deterministic stdlib and a clean REPL.",
    "version": "0.10.1",
    "publisher": "Waycoreinc",
    "license": "MIT",
    "engines": {
        "vscode": "^1.85.0"
    },
    "icon": "assets/icon.png",
    "galleryBanner": {
        "color": "#0f172a",
        "theme": "dark"
    },
    "keywords": [
        "sona",
        "ai-native",
        "ai",
        "llm",
        "genai",
        "cognitive-programming",
        "neurodivergent",
        "neurodiversity",
        "neuroinclusive",
        "neuro-inclusive",
        "accessibility",
        "adhd-friendly",
        "adhd",
        "dyslexia-support",
        "working-memory",
        "focus-mode",
        "explain-code",
        "code-explanations",
        "optimize-code",
        "programming-language",
        "language-design",
        "repl",
        "transpiler",
        "json",
        "merge-patch",
        "deep-update",
        "regex",
        "timeout",
        "developer-tools",
        "education",
        "openai",
        "azure-openai",
        "ai-collaboration",
        "revolutionary"
    ],
    "categories": [
        "Programming Languages",
        "AI",
        "Other"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/Bryantad/Sona.git"
    },
    "homepage": "https://github.com/Bryantad/Sona",
    "bugs": {
        "url": "https://github.com/Bryantad/Sona/issues"
    },
    "badges": [
        {
            "url": "https://img.shields.io/badge/version-0.10.1-blue.svg",
            "href": "https://github.com/Bryantad/Sona/releases/tag/v0.10.1",
            "description": "Version"
        },
        {
            "url": "https://img.shields.io/visual-studio-marketplace/i/Waycoreinc.sona-ai-native-programming?label=VS%20Code%20Installs",
            "href": "https://marketplace.visualstudio.com/items?itemName=Waycoreinc.sona-ai-native-programming",
            "description": "Installs"
        },
        {
            "url": "https://img.shields.io/github/stars/Bryantad/Sona?style=social",
            "href": "https://github.com/Bryantad/Sona/stargazers",
            "description": "GitHub Stars"
        }
    ],
    "activationEvents": [
        "onStartupFinished",
        "onLanguage:sona",
        "onCommand:sona.welcome",
        "onCommand:sona.selectUserProfile",
        "onCommand:sona.explainCode",
        "onCommand:sona.optimizeCode",
        "onCommand:sona.checkAIConnection",
        "onCommand:sona.toggleFocusMode",
        "onCommand:sona.clearCognitiveMemory",
        "onCommand:sona.showOnboarding",
        "onCommand:sona.openRepl",
        "onCommand:sona.verifyRuntime",
        "onCommand:sona.runFile",
        "onCommand:sona.runFileDebug",
        "onCommand:sona.exportCognitiveReport"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "sona",
                "aliases": [
                    "Sona",
                    "sona"
                ],
                "extensions": [
                    ".sona"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "smod",
                "aliases": [
                    "Sona Module",
                    "smod"
                ],
                "extensions": [
                    ".smod"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "sona",
                "scopeName": "source.sona",
                "path": "./syntaxes/sona.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "sona",
                "path": "./snippets/sona.json"
            }
        ],
        "iconThemes": [
            {
                "id": "sonalang-file-icons",
                "label": "Sona File Icons",
                "path": "./sonalang-file-icon-theme.json"
            }
        ],
        "commands": [
            {
                "command": "sona.welcome",
                "title": "Sona: Welcome & Setup"
            },
            {
                "command": "sona.selectUserProfile",
                "title": "Sona: Select User Profile"
            },
            {
                "command": "sona.checkAIConnection",
                "title": "Sona: Check AI Connection"
            },
            {
                "command": "sona.explainCode",
                "title": "Sona: Explain Code"
            },
            {
                "command": "sona.optimizeCode",
                "title": "Sona: Optimize Code"
            },
            {
                "command": "sona.toggleFocusMode",
                "title": "Sona: Toggle Focus Mode"
            },
            {
                "command": "sona.clearCognitiveMemory",
                "title": "Sona: Clear Cognitive Memory"
            },
            {
                "command": "sona.showOnboarding",
                "title": "Sona: Show Onboarding"
            },
            {
                "command": "sona.verifyRuntime",
                "title": "Sona: Verify Runtime"
            },
            {
                "command": "sona.openRepl",
                "title": "Sona: Open REPL"
            },
            {
                "command": "sona.runFile",
                "title": "Sona: Run File",
                "icon": "$(play)"
            },
            {
                "command": "sona.runFileDebug",
                "title": "Sona: Run File (Debug)",
                "icon": "$(debug-alt)"
            },
            {
                "command": "sona.exportCognitiveReport",
                "title": "Sona: Export Cognitive Report",
                "icon": "$(export)"
            }
        ],
        "keybindings": [
            {
                "command": "sona.runFile",
                "key": "f5",
                "when": "editorLangId == sona && !inDebugMode"
            },
            {
                "command": "sona.runFileDebug",
                "key": "ctrl+f5",
                "when": "editorLangId == sona"
            },
            {
                "command": "sona.toggleFocusMode",
                "key": "ctrl+shift+f",
                "when": "editorLangId == sona"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "sona.verifyRuntime",
                    "when": "true"
                },
                {
                    "command": "sona.openRepl",
                    "when": "true"
                },
                {
                    "command": "sona.runFile",
                    "when": "editorLangId == sona"
                },
                {
                    "command": "sona.runFileDebug",
                    "when": "editorLangId == sona"
                },
                {
                    "command": "sona.exportCognitiveReport",
                    "when": "editorLangId == sona"
                }
            ],
            "editor/title/run": [
                {
                    "command": "sona.runFile",
                    "when": "editorLangId == sona",
                    "group": "navigation@1"
                },
                {
                    "command": "sona.runFileDebug",
                    "when": "editorLangId == sona",
                    "group": "navigation@2"
                }
            ],
            "editor/context": [
                {
                    "command": "sona.runFile",
                    "when": "editorLangId == sona",
                    "group": "sona@1"
                },
                {
                    "command": "sona.explainCode",
                    "when": "editorLangId == sona && editorHasSelection",
                    "group": "sona@2"
                },
                {
                    "command": "sona.optimizeCode",
                    "when": "editorLangId == sona && editorHasSelection",
                    "group": "sona@3"
                },
                {
                    "command": "sona.exportCognitiveReport",
                    "when": "editorLangId == sona",
                    "group": "sona@4"
                }
            ]
        },
        "configuration": {
            "title": "Sona",
            "properties": {
                "sona.pythonPath": {
                    "type": "string",
                    "default": "",
                    "description": "Path to Python interpreter."
                },
                "sona.runtime.devRunnerPath": {
                    "type": "string",
                    "default": "",
                    "description": "Optional path to run_sona.py or quick_run.py for dev runner."
                }
            }
        },
        "configurationDefaults": {
            "files.associations": {
                "*.sona": "sona",
                "*.smod": "smod"
            }
        }
    },
    "scripts": {
        "validate-metadata": "node scripts/validate-metadata.js",
        "vscode:prepublish": "npm run validate-metadata && python ../../scripts/prepare_extension_runtime.py && npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "prebuild": "npm run validate-metadata",
        "build": "npm run compile && npm run package",
        "package": "npm run validate-metadata && vsce package",
        "package:minor": "npm version minor && npm run validate-metadata && vsce package",
        "package:patch": "npm version patch && npm run validate-metadata && vsce package",
        "test": "npm run validate-metadata"
    },
    "devDependencies": {
        "@types/node": "18.x",
        "@types/vscode": "^1.85.0",
        "typescript": "^5.4.0",
        "vsce": "^2.15.0"
    },
    "dependencies": {
        "vscode-languageclient": "^9.0.1"
    },
    "qna": "marketplace",
    "screenshots": [
        {
            "path": "media/screenshot-repl.png",
            "caption": "Sona REPL and focus-oriented helpers"
        },
        {
            "path": "media/screenshot-json.png",
            "caption": "JSON utilities: merge_patch and deep_update"
        }
    ]
}