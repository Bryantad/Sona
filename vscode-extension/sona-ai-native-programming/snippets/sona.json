{
    "Function Definition": {
        "prefix": [
            "fn",
            "func",
            "function"
        ],
        "body": [
            "fn ${1:name}(${2:params}) {",
            "\t${0}",
            "}"
        ],
        "description": "Define a Sona function"
    },
    "Function with Return": {
        "prefix": [
            "fnr",
            "funcret"
        ],
        "body": [
            "fn ${1:name}(${2:params}) {",
            "\t${3:// body}",
            "\treturn ${0};",
            "}"
        ],
        "description": "Define a function with return statement"
    },
    "If Statement": {
        "prefix": "if",
        "body": [
            "if ${1:condition} {",
            "\t${0}",
            "}"
        ],
        "description": "If statement"
    },
    "If-Else Statement": {
        "prefix": [
            "ife",
            "ifelse"
        ],
        "body": [
            "if ${1:condition} {",
            "\t${2}",
            "} else {",
            "\t${0}",
            "}"
        ],
        "description": "If-else statement"
    },
    "If-Elif-Else": {
        "prefix": [
            "ifeif",
            "ifelif"
        ],
        "body": [
            "if ${1:condition1} {",
            "\t${2}",
            "} elif ${3:condition2} {",
            "\t${4}",
            "} else {",
            "\t${0}",
            "}"
        ],
        "description": "If-elif-else statement"
    },
    "For Loop": {
        "prefix": "for",
        "body": [
            "for ${1:item} in ${2:collection} {",
            "\t${0}",
            "}"
        ],
        "description": "For-in loop"
    },
    "For Range": {
        "prefix": [
            "forr",
            "forrange"
        ],
        "body": [
            "for ${1:i} in range(${2:start}, ${3:end}) {",
            "\t${0}",
            "}"
        ],
        "description": "For loop with range"
    },
    "While Loop": {
        "prefix": "while",
        "body": [
            "while ${1:condition} {",
            "\t${0}",
            "}"
        ],
        "description": "While loop"
    },
    "Repeat Loop": {
        "prefix": "repeat",
        "body": [
            "repeat ${1:count} {",
            "\t${0}",
            "}"
        ],
        "description": "Repeat loop N times"
    },
    "Match Statement": {
        "prefix": "match",
        "body": [
            "match ${1:value} {",
            "\twhen ${2:pattern1} {",
            "\t\t${3}",
            "\t}",
            "\twhen ${4:pattern2} {",
            "\t\t${5}",
            "\t}",
            "\twhen _ {",
            "\t\t${0}",
            "\t}",
            "}"
        ],
        "description": "Match statement with patterns"
    },
    "When Expression": {
        "prefix": "when",
        "body": [
            "when ${1:value} {",
            "\t${2:pattern1} => ${3:result1},",
            "\t${4:pattern2} => ${5:result2},",
            "\t_ => ${0:default}",
            "}"
        ],
        "description": "When expression (returns value)"
    },
    "Try-Catch": {
        "prefix": [
            "try",
            "trycatch"
        ],
        "body": [
            "try {",
            "\t${1}",
            "} catch ${2:e} {",
            "\t${0}",
            "}"
        ],
        "description": "Try-catch block"
    },
    "Try-Catch-Finally": {
        "prefix": [
            "tryf",
            "trycatchfinally"
        ],
        "body": [
            "try {",
            "\t${1}",
            "} catch ${2:e} {",
            "\t${3}",
            "} finally {",
            "\t${0}",
            "}"
        ],
        "description": "Try-catch-finally block"
    },
    "Class Definition": {
        "prefix": "class",
        "body": [
            "class ${1:Name} {",
            "\tfn init(self${2:, params}) {",
            "\t\t${0}",
            "\t}",
            "}"
        ],
        "description": "Class with constructor"
    },
    "Class with Inheritance": {
        "prefix": [
            "classext",
            "classextends"
        ],
        "body": [
            "class ${1:Name} extends ${2:Parent} {",
            "\tfn init(self${3:, params}) {",
            "\t\tsuper.init(${4});",
            "\t\t${0}",
            "\t}",
            "}"
        ],
        "description": "Class extending parent"
    },
    "Method": {
        "prefix": [
            "method",
            "meth"
        ],
        "body": [
            "fn ${1:name}(self${2:, params}) {",
            "\t${0}",
            "}"
        ],
        "description": "Class method"
    },
    "Import": {
        "prefix": "import",
        "body": [
            "import ${1:module};"
        ],
        "description": "Import a module"
    },
    "Import As": {
        "prefix": [
            "importas",
            "impas"
        ],
        "body": [
            "import ${1:module} as ${2:alias};"
        ],
        "description": "Import with alias"
    },
    "Import From": {
        "prefix": [
            "from",
            "importfrom"
        ],
        "body": [
            "from ${1:module} import ${2:names};"
        ],
        "description": "Import specific items from module"
    },
    "Print": {
        "prefix": "print",
        "body": [
            "print(${1:\"${2:message}\"});"
        ],
        "description": "Print statement"
    },
    "Print Variable": {
        "prefix": [
            "printv",
            "pv"
        ],
        "body": [
            "print(\"${1:var}: \" + str(${1}));"
        ],
        "description": "Print variable with label"
    },
    "Variable": {
        "prefix": [
            "var",
            "let"
        ],
        "body": [
            "${1:name} = ${0:value};"
        ],
        "description": "Variable assignment"
    },
    "List": {
        "prefix": "list",
        "body": [
            "${1:name} = [${0}];"
        ],
        "description": "List literal"
    },
    "Dictionary": {
        "prefix": [
            "dict",
            "map"
        ],
        "body": [
            "${1:name} = {",
            "\t\"${2:key}\": ${3:value}${0}",
            "};"
        ],
        "description": "Dictionary literal"
    },
    "Lambda": {
        "prefix": [
            "lambda",
            "arrow"
        ],
        "body": [
            "(${1:params}) => ${0:expression}"
        ],
        "description": "Lambda/arrow function"
    },
    "Main Guard": {
        "prefix": "main",
        "body": [
            "# ${1:Script description}",
            "",
            "${0}",
            "",
            "print(\"Done.\");"
        ],
        "description": "Main script template"
    },
    "Test Function": {
        "prefix": "test",
        "body": [
            "fn test_${1:name}() {",
            "\t${2:// Arrange}",
            "\t${3:// Act}",
            "\t${4:// Assert}",
            "\tassert(${0:condition}, \"${5:message}\");",
            "}"
        ],
        "description": "Test function template"
    },
    "Comment Block": {
        "prefix": [
            "comment",
            "block"
        ],
        "body": [
            "# ============================================",
            "# ${1:Section Title}",
            "# ============================================",
            "${0}"
        ],
        "description": "Comment block/section header"
    },
    "Cognitive Intent": {
        "prefix": [
            "intent",
            "cintent"
        ],
        "body": [
            "intent(goal=\"${1:goal}\", constraints=\"${2:constraints}\", success=\"${3:success}\");"
        ],
        "description": "Declare cognitive intent metadata"
    },
    "Decision Record": {
        "prefix": [
            "decision",
            "decide"
        ],
        "body": [
            "decision(\"${1:label}\", rationale=\"${2:rationale}\", option=\"${3:option}\");"
        ],
        "description": "Record a decision and rationale"
    },
    "Cognitive Trace": {
        "prefix": [
            "cognitive_trace",
            "ctrace"
        ],
        "body": [
            "cognitive_trace(${1:true});"
        ],
        "description": "Toggle cognitive reasoning trace"
    },
    "Explain Step": {
        "prefix": [
            "explain_step",
            "explain"
        ],
        "body": [
            "explain_step();"
        ],
        "description": "Explain current cognitive state"
    },
    "Cognitive Scope": {
        "prefix": [
            "cognitive_scope",
            "cogscope"
        ],
        "body": [
            "cognitive_scope(\"${1:name}\") {",
            "\t${0}",
            "}"
        ],
        "description": "Create a cognitive scope boundary"
    },
    "Cognitive Check": {
        "prefix": [
            "cognitive_check",
            "cogcheck"
        ],
        "body": [
            "cognitive_check(task=\"${1:task}\", context=\"${2:context}\");"
        ],
        "description": "Run a cognitive load check"
    },
    "Focus Mode": {
        "prefix": [
            "focus_mode",
            "focus"
        ],
        "body": [
            "focus_mode(\"${1:task}\", ${2:25});"
        ],
        "description": "Start a focus mode session"
    },
    "Working Memory": {
        "prefix": [
            "working_memory",
            "wmemory"
        ],
        "body": [
            "working_memory(action=\"${1:store}\", key=\"${2:key}\", value=${3:value});"
        ],
        "description": "Store or recall working memory entries"
    },
    "Profile": {
        "prefix": [
            "profile",
            "cprofile"
        ],
        "body": [
            "profile(\"${1:adhd}\");"
        ],
        "description": "Set the cognitive accessibility profile"
    },
    "Cognitive Lint": {
        "prefix": [
            "cognitive_lint",
            "clint"
        ],
        "body": [
            "cognitive_lint(context=\"${1:context}\");"
        ],
        "description": "Run cognitive lint checks on context"
    },
    "Cognitive Report": {
        "prefix": [
            "cognitive_report",
            "creport"
        ],
        "body": [
            "cognitive_report();"
        ],
        "description": "Return a structured cognitive report"
    },
    "Cognitive Export": {
        "prefix": [
            "cognitive_export",
            "cexport"
        ],
        "body": [
            "cognitive_export(\"${1:report.json}\");"
        ],
        "description": "Export cognitive trace/report to JSON"
    }
}
