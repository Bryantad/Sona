{
    "name": "Sona Focus Light",
    "type": "light",
    "colors": {
        "editor.background": "#ffffff",
        "editor.foreground": "#333333",
        "activityBarBadge.background": "#007acc",
        "sideBarTitle.foreground": "#6f6f6f",
        "editor.selectionBackground": "#add6ff",
        "editor.lineHighlightBackground": "#f3f3f3",
        "editorCursor.foreground": "#333333",
        "editorWhitespace.foreground": "#d3d3d3"
    },
    "tokenColors": [
        {
            "name": "Comment",
            "scope": [
                "comment"
            ],
            "settings": {
                "fontStyle": "italic",
                "foreground": "#008000"
            }
        },
        {
            "name": "Keywords",
            "scope": [
                "keyword"
            ],
            "settings": {
                "foreground": "#0000ff"
            }
        },
        {
            "name": "Cognitive Keywords",
            "scope": [
                "keyword.other.sona",
                "entity.name.function.cognitive.sona"
            ],
            "settings": {
                "foreground": "#800080",
                "fontStyle": "bold"
            }
        },
        {
            "name": "AI Functions",
            "scope": [
                "entity.name.function.ai.sona"
            ],
            "settings": {
                "foreground": "#795e26",
                "fontStyle": "italic"
            }
        },
        {
            "name": "String",
            "scope": [
                "string"
            ],
            "settings": {
                "foreground": "#a31515"
            }
        },
        {
            "name": "Number",
            "scope": [
                "constant.numeric"
            ],
            "settings": {
                "foreground": "#098658"
            }
        },
        {
            "name": "Function",
            "scope": [
                "entity.name.function"
            ],
            "settings": {
                "foreground": "#795e26"
            }
        }
    ]
}