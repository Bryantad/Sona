{
    "name": "Sona Dyslexia Friendly",
    "type": "light",
    "colors": {
        "editor.background": "#fdf6e3",
        "editor.foreground": "#586e75",
        "activityBarBadge.background": "#268bd2",
        "sideBarTitle.foreground": "#586e75",
        "editor.selectionBackground": "#93a1a1",
        "editor.lineHighlightBackground": "#eee8d5",
        "editorCursor.foreground": "#586e75",
        "editorWhitespace.foreground": "#93a1a1"
    },
    "tokenColors": [
        {
            "name": "Comment",
            "scope": [
                "comment"
            ],
            "settings": {
                "fontStyle": "italic",
                "foreground": "#93a1a1"
            }
        },
        {
            "name": "Keywords",
            "scope": [
                "keyword"
            ],
            "settings": {
                "foreground": "#268bd2",
                "fontStyle": "bold"
            }
        },
        {
            "name": "Cognitive Keywords",
            "scope": [
                "keyword.other.sona",
                "entity.name.function.cognitive.sona"
            ],
            "settings": {
                "foreground": "#d33682",
                "fontStyle": "bold"
            }
        },
        {
            "name": "AI Functions",
            "scope": [
                "entity.name.function.ai.sona"
            ],
            "settings": {
                "foreground": "#b58900",
                "fontStyle": "italic"
            }
        },
        {
            "name": "String",
            "scope": [
                "string"
            ],
            "settings": {
                "foreground": "#2aa198"
            }
        },
        {
            "name": "Number",
            "scope": [
                "constant.numeric"
            ],
            "settings": {
                "foreground": "#859900"
            }
        },
        {
            "name": "Function",
            "scope": [
                "entity.name.function"
            ],
            "settings": {
                "foreground": "#cb4b16"
            }
        }
    ]
}