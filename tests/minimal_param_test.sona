// Minimal test for function parameter scope in v0.5.0

// Define a simple function with a parameter
func test_param(value) {
    print("Parameter received: " + value)
    return value + " was passed correctly"
}

// Test with a simple string
let result = test_param("Hello")
print("Result: " + result)

// Test with numeric parameter
func multiply(x) {
    return x * 2
}

print("5 * 2 = " + multiply(5))

// Test nested function with parameter access
func outer(a) {
    func inner() {
        return "Outer parameter: " + a
    }
    return inner()
}

print(outer("test"))
