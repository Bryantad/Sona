// Test collection.list module - v0.9.7
import collection.list

// Test chunk()
let chunked = collection.list.chunk([1, 2, 3, 4, 5], 2)
assert chunked == [[1, 2], [3, 4], [5]]
print("✓ chunk() basic test passed")

let str_chunked = collection.list.chunk("hello", 2)
assert str_chunked == ["he", "ll", "o"]
print("✓ chunk() string test passed")

// Test flatten()
let flattened = collection.list.flatten([[1, 2], [3, 4], [5]])
assert flattened == [1, 2, 3, 4, 5]
print("✓ flatten() basic test passed")

let nested_str = collection.list.flatten([["a"], ["b", "c"]])
assert nested_str == ["a", "b", "c"]
print("✓ flatten() string test passed")

// Test unique()
let uniqued = collection.list.unique([1, 2, 1, 3, 2])
assert uniqued == [1, 2, 3]
print("✓ unique() basic test passed")

let str_unique = collection.list.unique("hello")
assert str_unique == ["h", "e", "l", "o"]
print("✓ unique() string test passed")

// Test window()
let windowed = collection.list.window([1, 2, 3, 4, 5], 3)
assert windowed == [[1, 2, 3], [2, 3, 4], [3, 4, 5]]
print("✓ window() basic test passed")

let window_step = collection.list.window([1, 2, 3, 4, 5], 2, 2)
assert window_step == [[1, 2], [3, 4]]
print("✓ window() with step test passed")

print("✅ All collection.list tests passed!")
