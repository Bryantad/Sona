# Sona AI API Configuration
# Copy this file to .env and add your real API keys

# ---------------------------
# Azure OpenAI (Recommended)
# ---------------------------
# Create a resource in Azure OpenAI and a model deployment (e.g., gpt-4o-mini),
# then fill the values below. Endpoint looks like: https://<resource>.openai.azure.com/
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
# Use a normalized name with dashes only (e.g., gpt-4o-mini)
AZURE_OPENAI_DEPLOYMENT=gpt-4o-mini
# Some modules read this legacy name; keep both for compatibility
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o-mini

# OpenAI API Key (get from https://platform.openai.com/api-keys)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude API Key (get from https://console.anthropic.com/)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Sona AI Configuration
# Options: azure (preferred), openai, claude, auto
SONA_AI_PROVIDER=azure
SONA_AI_MAX_TOKENS=150
SONA_AI_TEMPERATURE=0.3
