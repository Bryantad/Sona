# Sona AI API Configuration
# Copy this file to .env and add your real API keys

# Azure OpenAI Configuration (Recommended - enterprise-grade)
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_MODEL=gpt-35-turbo
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# OpenAI API Key (Alternative - get from https://platform.openai.com/api-keys)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude API Key (Alternative - get from https://console.anthropic.com/)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Sona AI Configuration
SONA_AI_PROVIDER=azure  # Options: azure, openai, claude, auto
SONA_AI_MAX_TOKENS=150
SONA_AI_TEMPERATURE=0.3
