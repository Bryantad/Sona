{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Sona",
    "patterns": [
        {
            "include": "#keywords"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#comments"
        },
        {
            "include": "#numbers"
        }
    ],
    "repository": {
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.sona",
                    "match": "\\b(if|then|else|while|for|function|return|var|let|const|import|from|export|class|interface|type|cognitive|ai|async|await)\\b"
                }
            ]
        },
        "strings": {
            "name": "string.quoted.double.sona",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.sona",
                    "match": "\\\\."
                }
            ]
        },
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.sona",
                    "match": "//.*$"
                },
                {
                    "name": "comment.block.sona",
                    "begin": "/\\*",
                    "end": "\\*/"
                }
            ]
        },
        "numbers": {
            "name": "constant.numeric.sona",
            "match": "\\b\\d+(\\.\\d+)?\\b"
        }
    },
    "scopeName": "source.sona"
}